type Post {
    id: ID!
    title: String!
    text: String!
    category: String
    author: Author!
}

type Author {
    id: ID!
    name: String!
    thumbnail: String
    #posts: [Post]!
}

# The Root Query for the application
type Query {
    allPosts(count: Int, offset: Int): [Post]!
    allAuthors: [Author]
}

# The Root Mutation for the application
type Mutation {
    writePost(authorId: ID!, title: String!, text: String!, category: String) : Post!
}
